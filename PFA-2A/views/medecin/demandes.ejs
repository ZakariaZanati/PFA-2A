<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Demandes</title>
    <link rel="stylesheet" href="public/css/style.css" type="text/css">
    <script src="public/js/icons.js"></script>
</head>

<body>
    <nav class="navigation-bar">
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn"><i class="fas fa-bars"></i></label>
        <label class="logo">LOGO</label>
        <ul>
            <li><a href="medecinHome">Accueil</a></li>
            <li><a href="dayValues">Santé</a></li>
            <li><a href="demandes" class="active">Demandes</a></li>
            <li><a href="patients">Patients</a></li>
            <li><a href="myProfileMedecin">Profil</a></li>
            <li><a href="/logout">Deconnexion</a></li>
        </ul>
    </nav>
    <div class="container">
        <div class="container-header container-img-header">
            <div class="overlay"></div>
            <img src="public/images/list.jpg" class="img-header">
            <h1 class="text-header">La liste des demandes</h1>
        </div>
        <div class="container-body">
            <label>
                <span>Maladies</span>
                <select id="maladies" name="maladies" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% maladies.forEach(maladie => {%>
                        <option value="<%= maladie %>"><%= maladie %></option>
                    <% }) %>
                </select>
            </label>
            <input name="last" id="searchNom" type="text" placeholder="nom" onkeyup="searchPatients()">
            <input name="first" id="searchPrenom" type="text" placeholder="prenom" onkeyup="searchPatients()">
            <br>
            <label>
                <span>Pays</span>
                <select id="pays" name="pays" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% pays.forEach(pays => {%>
                        <option value="<%= pays %>"><%= pays %></option>
                    <% }) %>
                </select>
            </label>
            <label>
                <span>Villes</span>
                <select id="villes" name="villes" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% villes.forEach(ville => {%>
                        <option value="<%= ville %>"><%= ville %></option>
                    <% }) %>
                </select>
            </label>
            <table id="demandes" class="table table-sortable table-6">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Maladies</th>
                    </tr>
                </thead>
                <tbody>
                    <% demandes.forEach((demande)=>{ %>
                    <tr>
                        <td data-label="Nom"><%= demande.nom %></td>
                        <td data-label="Prénom"><%= demande.prenom %></td>
                        <td data-label="Pays"><%= demande.pays %></td>
                        <td data-label="Ville"><%= demande.ville %></td>
                        <td>    
                            <input id="showOld<%= demande._id %>" type="button" value="afficher" onclick="showMaladies(true, 'Old', '<%= demande._id %>')">
                            <input id="hideOld<%= demande._id %>" type="button" value="cacher" onclick="showMaladies(false, 'Old', '<%= demande._id %>')" style="display: none;">
                            <div id="divMaladies<%= demande._id %>" style="display: none;">
                                <% demande.maladies.forEach(maladie => { %>
                                    <%= maladie %> <br>
                                <% }) %>
                            </div>
                        </td>
                        <td data-label="Profil"><a class="btn"
                                href='userProfile?id=<%= demande._id %>'>Consulter</a></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>


    </div>


</body>
<script src="public/js/filtres.js"></script>
<script src="public/js/sortedTable.js"></script>
<script src="public/js/app.js"></script>

</html>