<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PFA</title>
    <link rel="stylesheet" href="public/css/style.css" type="text/css">
    <script src="public/js/icons.js"></script>
</head>

<body>
    <nav class="navigation-bar">

        <input type="checkbox" id="check">
        <label for="check" class="checkbtn"><i class="fas fa-bars"></i></label>
        <label class="logo"><a href="patientHome">LOGO</a></label>

        <ul class="nav-items">
            <li><a href="dayValues">Santé</a></li>
            <li><a href="demandes">Demandes</a></li>
            <li><a href="patients">Patients</a></li>
        </ul>

        <div class="param">
            <ul>
                <div class="par">
                    <li id="li-alert">
                        <a href="#"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> </a>
                    </li>
                    <p class="desc desc-alert" id="alert">Alertes</p>
                    <p class="notif">1</p>
                    <div class="notif-div" id="alert-div-items">
                        <ul>
                            <li>Alerte 1 </li>
                            <li>Alerte 2</li>
                        </ul>
                    </div>

                </div>
                <div class="par">
                    <li id="li-notif">
                        <a href="#"><i class="fa fa-bell" aria-hidden="true"></i></a>
                    </li>
                    <p class="desc desc-notif" id="notif">Notifications</p>
                    <p class="notif">2</p>
                    <div class="notif-div" id="notif-div-items">
                        <ul>
                            <li>Notif 1</li>
                            <li>Notif 2</li>
                        </ul>
                    </div>
                </div>
                <div class="par">
                    <li id="li-profil">
                        <a href="myProfileMedecin"><i class="fa fa-user-md" aria-hidden="true"></i></a>
                    </li>
                    <p class="desc desc-profil" id="profil">Profil</p>
                </div>
            </ul>
        </div>
        <div class="param">
            <div class="last-par">
                <ul>
                    <li id="li-dec"><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                    <p class="desc desc-dec" id="dec">Deconnexion</p>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-home">
        <div class="container-header container-img-header">
            <img src="public/images/red.jpg" class="img-header">
            <h1 class="text-header">La liste des alertes</h1>
        </div>

        <div class="container-body">
            <table class="table table-sortable table-5">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Mesure</th>
                        <th>Alert</th>
                        <th>Différence</th>
                    </tr>
                </thead>
                <tbody>
                    </tr>
                    <% alerts.forEach((alert)=>{ %>
                    <tr>
                        <td id="patient" data-label="Patient"><a class="btn"
                                href='userProfile?id=<%= alert.utilisateur._id %>'><%= alert.utilisateur.nom %>
                                <%= alert.utilisateur.prenom %></a></td>
                        <td data-label="Date"><%= alert.date %></td>
                        <td data-label="Heure"><%= alert.temps %></td>
                        <td data-label="Mesure"><%= alert.mesure %></td>
                        <td data-label="Alert"><%= alert.text %></td>
                        <td data-label="Différence"><%= alert.difference %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    </div>
</body>

<script src="public/js/sortedTable.js"></script>
<script src="public/js/pop-up.js"></script>

</html>