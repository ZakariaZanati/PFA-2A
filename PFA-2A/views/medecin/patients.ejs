<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PFA</title>
    <link rel="stylesheet" href="public/css/style.css" type="text/css">
    <script src="public/js/icons.js"></script>
</head>

<body>
    <nav class="navigation-bar">
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn"><i class="fas fa-bars"></i></label>
        <label class="logo">LOGO</label>
        <ul>
            <li><a href="medecinHome">Accueil</a></li>
            <li><a href="dayValues">Santé</a></li>
            <li><a href="demandes">Demandes</a></li>
            <li><a class="active" href="patients">Patients</a></li>
            <li><a href="myProfileMedecin">Profil</a></li>
            <li><a href="/logout">Deconnexion</a></li>
        </ul>
    </nav>
    <div class="container-home">
        <div class="container-img-header container-header">
            <div class="overlay"></div>
            <img src="/public/images/patient.jpg" class="img-header">
            <h1 class="text-header">La liste des patients</h1>
        </div>

        <div class="container-body">
            <label>
                <span>Maladies</span>
                <select id="maladies" name="maladies" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% maladies.forEach(maladie => {%>
                        <option value="<%= maladie %>"><%= maladie %></option>
                    <% }) %>
                </select>
            </label>
            <input name="last" id="searchNom" type="text" placeholder="nom" onkeyup="searchPatients()">
            <input name="first" id="searchPrenom" type="text" placeholder="prenom" onkeyup="searchPatients()">
            <br>
            <label>
                <span>Pays</span>
                <select id="pays" name="pays" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% pays.forEach(pays => {%>
                        <option value="<%= pays %>"><%= pays %></option>
                    <% }) %>
                </select>
            </label>
            <label>
                <span>Villes</span>
                <select id="villes" name="villes" onchange="searchPatients()">
                    <option value="-1">tous</option>
                    <% villes.forEach(ville => {%>
                        <option value="<%= ville %>"><%= ville %></option>
                    <% }) %>
                </select>
            </label>
            <div class="radio-group margin">
                <label class="radio">
                    <input type="radio" checked="true" name="patients" id="all" value="all" onclick="getPatients()">
                    <span>Tous  les patients</span>
                </label>
                <label class="radio">
                    <input type="radio" name="patients" id="current" value="current" onclick="getPatients()">
                    <span>Patients actuels</span>
                </label>
                <label class="radio">
                    <input type="radio" name="patients" id="old" value="old" onclick="getPatients()">
                    <span>Anciens patients</span>
                </label> 
            </div>
            <div id="allPatients">
                <table class="table table-sortable table-3">
                    <thead id="table-head">
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Pays</th>
                            <th>Ville</th>
                            <th>Maladies</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allPatients.forEach((patient)=>{ %>
                        <tr>
                            <td id="patient" data-label="Patient"><a class="btn"
                                    href='userProfile?id=<%= patient._id %>'><%= patient.nom %></a></td>
                            <td data-label="Prenom"><%= patient.prenom%></td>
                            <td data-label="Pays"><%= patient.pays %></td>
                            <td data-label="Ville"><%= patient.ville %></td>
                            <td>    
                                <input id="showAll<%= patient._id %>" type="button" value="afficher" onclick="showMaladies(true, 'All' , '<%= patient._id %>')">
                                <input id="hideAll<%= patient._id %>" type="button" value="cacher" onclick="showMaladies(false, 'All' , '<%= patient._id %>')" style="display: none;">
                                <div id="divMaladies<%= patient._id %>" style="display: none;">
                                    <% patient.maladies.forEach(maladie => { %>
                                        <%= maladie %> <br>
                                    <% }) %>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div id="currentPatients">
                <table class="table table-sortable table-3">
                    <thead id="table-head">
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Pays</th>
                            <th>Ville</th>
                            <th>Maladies</th>
                            <th>Date d'ajout</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% currentPatients.forEach((patient)=>{ %>
                        <tr>
                            <td id="patient" data-label="Patient"><a class="btn"
                                    href='userProfile?id=<%= patient.utilisateur._id %>'><%= patient.utilisateur.nom %></a></td>
                            <td data-label="Prenom"><%= patient.utilisateur.prenom %></td>
                            <td data-label="Pays"><%= patient.utilisateur.pays %></td>
                            <td data-label="Ville"><%= patient.utilisateur.ville %></td>
                            <td>    
                                <input id="showCurrent<%= patient.utilisateur._id %>" type="button" value="afficher" onclick="showMaladies(true, 'Current' , '<%= patient.utilisateur._id %>')">
                                <input id="hideCurrent<%= patient.utilisateur._id %>" type="button" value="cacher" onclick="showMaladies(false, 'Current' , '<%= patient.utilisateur._id %>')" style="display: none;">
                                <div id="divMaladies<%= patient.utilisateur._id %>" style="display: none;">
                                    <% patient.utilisateur.maladies.forEach(maladie => { %>
                                        <%= maladie %> <br>
                                    <% }) %>
                                </div>
                            </td>
                            <td data-label="Début suivi"><%= patient.debutSuivi.toISOString().split('T')[0]; %></td>
                            <td><a href='patientValues?id=<%= patient.utilisateur._id %>'
                                    class="btn btn-success">Santé</a></td>
                            <td><a href='userAlerts?id=<%= patient.utilisateur._id %>' class="btn btn-echec">Alertes</a></td>
                            
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div id="oldPatients">
                <table class="table table-sortable table-4">
                    <thead id="table-head">
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Pays</th>
                            <th>Ville</th>
                            <th>Maladies</th>
                            <th>Date d'ajout</th>
                            <th>Fin suivi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% oldPatients.forEach((patient)=>{ %>
                        <tr>
                            <td id="patient" data-label="Patient"><a class="btn"
                                    href='userProfile?id=<%= patient.utilisateur._id %>'><%= patient.utilisateur.nom %></a></td>
                            <td data-label="Prenom"><%= patient.utilisateur.prenom %></td>
                            <td data-label="Pays"><%= patient.utilisateur.pays %></td>
                            <td data-label="Ville"><%= patient.utilisateur.ville %></td>
                            <td>    
                                <input id="showOld<%= patient.utilisateur._id %>" type="button" value="afficher" onclick="showMaladies(true, 'Old', '<%= patient.utilisateur._id %>')">
                                <input id="hideOld<%= patient.utilisateur._id %>" type="button" value="cacher" onclick="showMaladies(false, 'Old', '<%= patient.utilisateur._id %>')" style="display: none;">
                                <div id="divMaladies<%= patient.utilisateur._id %>" style="display: none;">
                                    <% patient.utilisateur.maladies.forEach(maladie => { %>
                                        <%= maladie %> <br>
                                    <% }) %>
                                </div>
                            </td>
                            <td data-label="Début suivi"><%= patient.debutSuivi.toISOString().split('T')[0]; %></td>
                            <td data-label="Fin suivi"><%= patient.finSuivi.toISOString().split('T')[0]; %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

<script src="public/js/filtres.js"></script>
<script src="public/js/sortedTable.js"></script>
<script src="public/js/radio.js"></script>


</html>