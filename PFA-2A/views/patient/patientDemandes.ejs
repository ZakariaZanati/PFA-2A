<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Demandes</title>
    <link rel="stylesheet" href="public/css/style.css" type="text/css">
    <script src="public/js/icons.js"></script>
</head>

<body>
    <nav class="navigation-bar">
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn"><i class="fas fa-bars"></i></label>
        <label class="logo">LOGO</label>
        <ul>
            <li><a href="patientHome">Accueil</a></li>
            <li><a href="patientValues">Santé</a></li>
            <li><a href="#">Statistiques</a></li>
            <li><a class="active" href="patientDemandes">Demandes</a></li>
            <li><a href="medecins">Médecins</a></li>
            <li><a href="seuils">Seuils</a></li>
            <li><a href="myProfileUser">Profil</a></li>
            <li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
        </ul>
    </nav>
    <div class="container">
        <div class="container-header container-img-header">
            <div class="overlay"></div>
            <img src="public/images/list.jpg" class="img-header">
            <h1 class="text-header">La liste des demandes</h1>
        </div>
        <div class="container-body">
            <label>
                <span>Specialite</span>
                <select id="specialites" name="specialites" onchange="search()">
                    <option value="-1">tous</option>
                    <% specialites.forEach(specialite => {%>
                        <option value="<%= specialite %>"><%= specialite %></option>
                    <% }) %>
                </select>
            </label>
            <input name="last" id="searchNom" type="text" placeholder="nom" onkeyup="search()">
            <input name="first" id="searchPrenom" type="text" placeholder="prenom" onkeyup="search()">
            <br>
            <label>
                <span>Pays</span>
                <select id="pays" name="pays" onchange="search()">
                    <option value="-1">tous</option>
                    <% pays.forEach(pays => {%>
                        <option value="<%= pays %>"><%= pays %></option>
                    <% }) %>
                </select>
            </label>
            <label>
                <span>Villes</span>
                <select id="villes" name="villes" onchange="search()">
                    <option value="-1">tous</option>
                    <% villes.forEach(ville => {%>
                        <option value="<%= ville %>"><%= ville %></option>
                    <% }) %>
                </select>
            </label>
            <table id="patientDemandes" class="table table-sortable table-6">
                <thead>
                    <tr>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Spécialité</th>
                    </tr>
                    </tr>
                </thead>
                <tbody>
                    <% demandes.forEach((demande)=>{ %>
                    <tr>
                        <td data-label="Nom"><%= demande.nom %></td>
                        <td data-label="Prénom"><%= demande.prenom %></td>
                        <td data-label="Pays"><%= demande.pays %></td>
                        <td data-label="Ville"><%= demande.ville %></td>
                        <td data-label="Spécialité"><%= demande.specialite %></td>
                        <td data-label="Profil"><a class="btn" href='medecinProfile?id=<%= demande._id %>'>Consulter</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>


    </div>


</body>
<script src="public/js/filtres.js"></script>
<script src="public/js/sortedTable.js"></script>
<script src="public/js/app.js"></script>

</html>