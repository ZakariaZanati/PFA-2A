<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600i&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="../public/css/style2.css">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <title>Profil</title>
    <style>
        th,td{
            border: 1px solid rgb(14, 14, 126);
            padding: 8px;
        }
        table{
            margin: 100px auto;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <div class="wrapper">

        <div class="navbar-wrapper">
            <nav>
                <ul>
                    <li><a href="home">Home</a></li>
                    <li><a id="medecins" href="medecins">Medecins</a></li>
                    <li><a id="newValues" href="newvalues">New values</a></li>
                </ul>
                <ul class="log-out">
                    <li><a href="/logout">Log out</a></li>
                </ul>
            </nav>
        </div>

        <div class="content-wrapper">
            
            <table>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Pays</th>
                    <th>Ville</th>
                </tr>
                <% patients.forEach((patient)=>{ %>
                    <tr>
                        <td><%= patient.nom %></td>
                        <td><%= patient.prenom %></td>
                        <td><%= patient.email %></td>
                        <td><%= patient.pays %></td>
                        <td><%= patient.ville %></td>
                        <td><a href='userProfile?id=<%= patient._id %>' style="text-decoration: none; color: black;">Profile</a></td>
                        <td><a href='patientValues?id=<%= patient._id %>' style="text-decoration: none; color: black;">Prelevement</a></td>
                    </tr>
                <% }); %>
                
            </table>
        </div>
        

    </div>
    
</body>
</html>